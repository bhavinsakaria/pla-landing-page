---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Brands">
  <!-- Hero Section -->
  <section class="brands-hero">
    <div class="container brands-hero-content">
      <h1 class="brands-title">Our Partner Brands</h1>
      <p class="brands-subtitle">
        Trusted by India's leading pharmaceutical manufacturers. We partner with over 100 premium brands to ensure quality healthcare distribution.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">

      <div class="brand-grid">
         {['Alembic', 'B-tex', 'Bentley', 'Biochem', 'Biocrross', 'Cadila', 'Cipla', 'Delux', 'Enkay', 'Glenmark', 'HMD', 'Hicks', 'Intas', 'JMS', 'Kremoint', 'Medifill', 'Microlabs', 'National', 'Omega', 'Saibol', 'Torrent', 'Wockhardt'].map((brand) => (
          <div class="brand-card">
            <div class="logo-box-img">
              <img src={`/brands/${brand}.png`} alt={brand} loading="lazy" onError="this.style.display='none';this.nextElementSibling.style.display='flex'">
               <div class="fallback-text" style="display:none">{brand[0]}</div>
            </div>
            <span class="name">{brand}</span>
          </div>
         ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Brands Hero Section */
  .brands-hero {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-bottom: 1px solid #e5e7eb;
    padding: 3.5rem 0 1.5rem 0;
    text-align: center;
  }

  .brands-hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .brands-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #111;
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .brands-subtitle {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
    font-weight: 400;
  }

  .brand-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.8rem;
    margin-top: 2rem;
  }

  .brand-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow: hidden;
  }

  .brand-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #e63946, #a8202d);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .brand-card:hover::before {
    transform: scaleX(1);
  }

  .brand-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
    border-color: #d1d5db;
  }

  .logo-box-img {
    width: 100%;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    overflow: hidden;
  }
  
  .logo-box-img img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .brand-card:hover img {
    transform: scale(1.15);
  }
  
  .fallback-text {
     width: 80px; 
     height: 80px; 
     background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(168, 32, 45, 0.05)); 
     border-radius: 50%;
     display: flex; 
     align-items: center; 
     justify-content: center; 
     font-weight: 700; 
     color: #e63946;
     font-size: 2rem;
  }

  .name {
    font-weight: 700;
    color: #111;
    font-size: 1.05rem;
    letter-spacing: -0.5px;
  }
  
  .section-sub {
    color: #666;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .brands-hero {
      padding: 3rem 0 1.5rem 0;
    }

    .brands-title {
      font-size: 2rem;
    }

    .brands-subtitle {
      font-size: 1rem;
    }

    .brand-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1.3rem;
      margin-top: 1.5rem;
    }

    .brand-card {
      padding: 1.8rem 1.2rem;
    }

    .logo-box-img {
      height: 100px;
      margin-bottom: 1rem;
    }

    .name {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 600px) {
    .brands-hero {
      padding: 2rem 0 1rem 0;
    }

    .brands-title {
      font-size: 1.8rem;
    }

    .brands-subtitle {
      font-size: 0.95rem;
    }

    .brand-grid {
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
      gap: 1rem;
    }

    .brand-card {
      padding: 1.5rem 1rem;
    }

    .logo-box-img {
      height: 80px;
      margin-bottom: 0.8rem;
    }

    .logo-box-img img {
      max-height: 60px;
    }

    .name {
      font-size: 0.9rem;
    }
  }
</style>
