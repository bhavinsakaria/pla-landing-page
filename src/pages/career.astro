---
import Layout from '../layouts/Layout.astro';

const jobOpenings = [
  { id: 1, title: 'Accountant', icon: 'üìä' },
  { id: 2, title: 'Sales and Marketing Executive', icon: 'üì¢' },
  { id: 3, title: 'Office Administrator', icon: 'üè¢' },
  { id: 4, title: 'Office Coordinator', icon: 'üìã' },
  { id: 5, title: 'Delivery Clerk', icon: 'üöö' },
];
---

<Layout title="Career">
  <section class="section section-bg">
    <div class="container">
      <div class="section-header">
        <h2>CAREER</h2>
      </div>

      <div class="career-wrapper">
        <!-- Content Header -->
        <div class="career-intro text-center">
          <h1 class="mb-4">Work @ Pharma Links Agencies</h1>
          <p class="lead-text">
            Career opportunities at Pharma Links Agencies in various domains like sales and marketing, accounting, clerks, and administration. 
            We are always looking for talented individuals to join our growing team.
          </p>
        </div>

        <!-- Job Openings Grid -->
        <div class="jobs-grid mt-5">
          {jobOpenings.map(job => (
            <div class="job-card">
              <div class="job-icon">{job.icon}</div>
              <h3 class="job-title">{job.title}</h3>
              <p class="job-status">Open Position</p>
            </div>
          ))}
        </div>

        <!-- Call to Action -->
        <div class="cta-box mt-5">
          <h3>Ready to Join Us?</h3>
          <p>Come be part of our team! Write to us with your resume at:</p>
          <a href="mailto:plabng@gmail.com" class="email-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            plabng@gmail.com
          </a>
        </div>
      </div>

    </div>
  </section>
</Layout>

<style>
  .career-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .text-center { text-align: center; }
  .mb-4 { margin-bottom: 1.5rem; }
  .mt-5 { margin-top: 3rem; }

  .lead-text {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Jobs Grid */
  .jobs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .job-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    border: 1px solid var(--color-border);
    border-bottom: 4px solid var(--color-primary);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .job-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
  }

  .job-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .job-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .job-status {
    font-size: 0.85rem;
    color: var(--color-secondary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    background: rgba(237, 28, 36, 0.05); /* Light red bg */
    display: inline-block;
    padding: 2px 8px;
    border-radius: 4px;
  }

  /* CTA Box */
  .cta-box {
    background-color: white;
    border: 1px solid #e0e0e0;
    padding: 3rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.03);
  }

  .cta-box h3 {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .email-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-secondary);
  }
  
  .email-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .jobs-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 1.5rem;
    }
  }
</style>
