---
import Layout from '../layouts/Layout.astro';

const features = [
  { icon: 'üíä', title: 'Wide Range', desc: 'Over 10,000 products available' },
  { icon: 'üöö', title: 'Fast Delivery', desc: 'Same-day delivery in metro areas' },
  { icon: 'üí∞', title: 'Best Prices', desc: 'Competitive pricing for maximum savings' },
  { icon: 'ü§ù', title: 'Trusted', desc: 'Serving 1000+ Customers since 1991' },
];

const brands = [
  'Alembic', 'B-tex', 'Bentley', 'Biochem', 'Biocrross', 'Cadila', 'Cipla', 'Delux', 'Enkay', 
  'Glenmark', 'HMD', 'Hicks', 'Intas', 'JMS', 'Kremoint', 'Medifill', 'Microlabs', 'National', 
  'Omega', 'Saibol', 'Torrent', 'Wockhardt'
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="grid-background"></div>
    <div class="container hero-container">
       <div class="hero-left">
          <h1 class="hero-title">Healthcare<br><span class="text-gradient">Delivered.</span></h1>
          <h2 class="hero-subtitle">The fastest pharmaceutical distribution network.<br>Seamless supply chain for the modern world.</h2>
          <p class="hero-desc">POWERED BY PHARMA LINKS AGENCIES INFRASTRUCTURE.</p>
          
          <div class="hero-cta-group">
             <a href="https://pharmalinks.co.in/" target="_blank" class="btn btn-primary-red btn-lg">BUY NOW</a>
             <a href="/contact" class="btn btn-outline btn-lg">CONTACT US</a>
          </div>
       </div>

       <div class="hero-right">
          <!-- Vanilla JS Slider for Max Stability -->
          <div class="js-slider" id="heroSlider">
             <img src="/hero_banner_1.png" class="slide-img active" alt="Slide 1">
             <img src="/hero_banner_2.png" class="slide-img" alt="Slide 2">
             <img src="/hero_banner_3.png" class="slide-img" alt="Slide 3">
             <img src="/hero_banner_4.png" class="slide-img" alt="Slide 4">
          </div>
          
          <!-- Floating UI Elements -->
          <div class="floating-badge badge-1">1000+ Customers</div>
          <div class="floating-badge badge-2">24/7 Support</div>
       </div>
    </div>
  </section>

  <!-- Quote/Ticker Section -->
  <section class="ticker-section">
     <div class="container text-center">
        <p class="scrolling-text">TRUSTED BY TOP PHARMACEUTICAL MANUFACTURERS AND HOSPITALS ACROSS INDIA</p>
     </div>
  </section>

  <!-- Features with Modern Cards -->
  <section class="section">
    <div class="container">
       <div class="section-header text-center">
          <h2>Why Choose Us</h2>
          <div class="header-line"></div>
       </div>
       <div class="features-grid">
          {features.map(f => (
            <div class="feature-card-modern">
               <div class="icon-wrapper">{f.icon}</div>
               <h3>{f.title}</h3>
               <p>{f.desc}</p>
            </div>
          ))}
       </div>
    </div>
  </section>

  <section class="section brands-showcase">
    <div class="container">
        <div class="section-header text-center">
            <h2>Our Partners</h2>
            <p class="brands-subtitle">Trusted by 100+ premium pharmaceutical brands</p>
            <div class="header-line"></div>
        </div>
        
        <div class="brands-row-container">
             <div class="brands-scroll-row">
               {brands.map((brand, index) => (
                 <div class="brand-item" style={`animation-delay: ${index * 0.08}s`}>
                    <div class="brand-item-content">
                       <img src={`/brands/${brand}.png`} alt={brand} loading="lazy" onError="this.style.display='none';this.nextElementSibling.style.display='flex'">
                       <div class="fallback-badge" style="display:none">{brand[0]}</div> 
                    </div>
                 </div>
               ))}
             </div>
        </div>

        <div class="brands-cta-row">
             <a href="/brands" class="view-all-link">
               <span>View All Brands</span>
               <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                 <path d="M5 12h14M12 5l7 7-7 7"/>
               </svg>
             </a>
        </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="section">
    <div class="container about-grid-modern">
       <div class="about-img_modern">
          <img src="/building.jpg" alt="Office Building">
          <div class="about-overlay">
             <h3>Since 1991</h3>
          </div>
       </div>
       <div class="about-content_modern">
          <h2>About Us</h2>
          <p class="lead">Building the future of healthcare logistics.</p>
          <p>Pharma Links Agencies isn't just a distributor; we are a vital node in the healthcare ecosystem. Serving over 1000+ Customers with precision and care.</p>
          <a href="/about" class="btn btn-black mt-4">READ OUR STORY</a>
       </div>
    </div>
  </section>
</Layout>

<style>
  /* Modern Grid & Hero */
  .hero-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
    background-color: #fff;
    min-height: 80vh; /* Ensure height */
    display: flex;
    align-items: center;
  }
  
  .grid-background {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-image: 
        linear-gradient(#f0f0f0 1px, transparent 1px),
        linear-gradient(90deg, #f0f0f0 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
    opacity: 0.6;
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }
  
  .hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -2px;
    font-family: 'Inter', sans-serif;
    color: #222;
  }
  
  .text-gradient {
    color: #e63946; /* Matching Red from button */
    background: linear-gradient(135deg, #e63946 0%, #a8202d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 1rem;
    color: #555;
    line-height: 1.4;
  }
  
  .hero-desc {
    color: #999;
    margin-bottom: 2.5rem;
    font-family: monospace;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 600;
  }
  
  .hero-cta-group {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-wrap: wrap;
  }
  
  /* Red Button Style */
  .btn-primary-red {
    background: linear-gradient(135deg, #e63946, #d62839);
    color: white;
    border: none;
    padding: 1rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 6px;
    box-shadow: 0 8px 20px rgba(230, 57, 70, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: inline-block;
  }
  
  .btn-primary-red:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(230, 57, 70, 0.5);
    background: linear-gradient(135deg, #d62839, #a8202d);
  }
  
  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 6px;
  }
  
  .btn-outline {
    background: transparent;
    border: 2px solid #333;
    color: #333;
    padding: 0.9rem 2.2rem;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    font-weight: 700;
  }
  
  .btn-outline:hover {
    border-color: #e63946;
    background: rgba(230, 57, 70, 0.05);
    color: #e63946;
  }

  /* CSS ONLY Slider - High Performance */
  .hero-right {
    position: relative;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Clean boundaries */
  }

  .js-slider {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .slide-img {
    position: absolute;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 1s ease, transform 1s ease;
  }

  .slide-img.active {
    opacity: 1;
    transform: scale(1);
    z-index: 2;
  }
  
  .floating-badge {
    position: absolute;
    background: white;
    padding: 0.5rem 1rem;
    border: 1px solid #eee;
    box-shadow: 0 10px 20px rgba(0,0,0,0.05); /* Lighter shadow */
    font-family: monospace;
    font-size: 0.8rem;
    color: var(--color-primary);
    animation: float 6s ease-in-out infinite;
    z-index: 10;
  }
  
  .badge-1 { top: 10%; right: 10%; animation-delay: 0s; }
  .badge-2 { bottom: 20%; left: 0%; animation-delay: 3s; }
  
  @keyframes float {
    0%, 100% { transform: translate3d(0, 0, 0); }
    50% { transform: translate3d(0, -15px, 0); }
  }

  /* Ticker */
  .ticker-section {
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    padding: 1rem 0;
    background: #fafafa;
  }
  
  .scrolling-text {
    font-family: monospace;
    letter-spacing: 2px;
    color: #666;
    font-size: 0.8rem;
    margin: 0;
  }

  /* Modern Features */
  .section:has(.features-grid) {
    background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  }

  .section-header {
    margin-bottom: 4rem;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .feature-card-modern {
    padding: 2.5rem;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    background: white;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow: hidden;
  }

  .feature-card-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #e63946, #a8202d);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .feature-card-modern:hover::before {
    transform: scaleX(1);
  }
  
  .feature-card-modern:hover {
    border-color: #d1d5db;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }
  
  .feature-card-modern h3 {
    font-size: 1.3rem;
    font-weight: 700;
    margin: 1.5rem 0 0.8rem;
    color: #111;
  }

  .feature-card-modern p {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }
  
  .icon-wrapper {
    width: 60px; 
    height: 60px;
    background: linear-gradient(135deg, rgba(230, 57, 70, 0.1), rgba(168, 32, 45, 0.05));
    display: flex; 
    align-items: center; 
    justify-content: center;
    font-size: 2rem;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .feature-card-modern:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  /* Brand Single Row - MODERNIZED */
  .brands-showcase {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }

  .brands-subtitle {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .brands-row-container {
    overflow: hidden;
    position: relative;
    margin: 2.5rem 0;
  }

  .brands-scroll-row {
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: flex-start;
    padding: 1rem 0;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
  }

  .brands-scroll-row::-webkit-scrollbar {
    height: 4px;
  }

  .brands-scroll-row::-webkit-scrollbar-track {
    background: #f0f0f0;
    border-radius: 10px;
  }

  .brands-scroll-row::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 10px;
  }

  .brands-scroll-row::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }

  .brand-item {
    flex-shrink: 0;
    animation: slideInLeft 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) backwards;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translate3d(-30px, 0, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .brand-item-content {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.5rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 120px;
    min-width: 160px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow: hidden;
  }

  .brand-item-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #e63946, #a8202d);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .brand-item-content::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(230, 57, 70, 0.08), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .brand-item:hover .brand-item-content::before {
    transform: scaleX(1);
  }

  .brand-item:hover .brand-item-content::after {
    opacity: 1;
  }

  .brand-item:hover .brand-item-content {
    border-color: #d1d5db;
    box-shadow: 0 12px 32px rgba(230, 57, 70, 0.15);
    transform: translateY(-6px);
  }

  .brand-item-content img {
    max-width: 100%;
    max-height: 80px;
    object-fit: contain;
    transition: filter 0.3s ease;
  }

  .brand-item:hover .brand-item-content img {
    filter: brightness(1.1) drop-shadow(0 4px 8px rgba(230, 57, 70, 0.2));
  }

  .fallback-badge {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, rgba(230, 57, 70, 0.12), rgba(168, 32, 45, 0.08));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: #e63946;
    font-size: 1.8rem;
  }

  .brands-cta-row {
    text-align: center;
    padding-top: 1rem;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-weight: 700;
    color: #111;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
  }

  .view-all-link:hover {
    color: #e63946;
    background: rgba(230, 57, 70, 0.05);
    gap: 1rem;
  }

  .view-all-link svg {
    transition: transform 0.3s ease;
  }

  .view-all-link:hover svg {
    transform: translateX(4px);
  }

  /* Modern About */
  .about-grid-modern {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
  }
  
  .about-img_modern {
    position: relative;
  }
  
  .about-img_modern img {
    width: 100%;
    border-radius: 0; /* Sharp corners */
    filter: grayscale(20%);
    transition: filter 0.3s;
  }
  
  .about-img_modern:hover img { filter: grayscale(0%); }
  
  .about-overlay {
    position: absolute;
    bottom: -30px;
    right: -30px;
    background: white;
    color: #333;
    padding: 2rem 2.5rem;
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    border-radius: 8px;
    border-left: 5px solid var(--color-primary);
  }
  
  .about-overlay h3 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 800;
    letter-spacing: -1px;
    color: #222;
  }
  
  .btn-black {
    background: linear-gradient(135deg, #111, #333);
    color: white;
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
  }
  
  .btn-black:hover { 
    background: linear-gradient(135deg, #333, #555);
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.3);
  }

  /* Utilities */
  .fade-in-up { animation: fadeInUp 1s ease-out backwards; }
  .fade-in-right { animation: fadeInRight 1s ease-out backwards; }
  
  @keyframes fadeInUp { from { opacity: 0; transform: translate3d(0, 20px, 0); } to { opacity: 1; transform: translate3d(0, 0, 0); } }
  @keyframes fadeInRight { from { opacity: 0; transform: translate3d(20px, 0, 0); } to { opacity: 1; transform: translate3d(0, 0, 0); } }



  .header-line {
    width: 60px; height: 3px; background: #e63946; margin: 1.5rem auto;
  }

  @media (max-width: 900px) {
    .hero-section { 
      padding: 4rem 0; 
      min-height: auto;
    }
    .hero-container { 
      grid-template-columns: 1fr; 
      text-align: center;
      gap: 2rem;
    }
    .hero-title { 
      font-size: 2.2rem; 
    }
    .hero-subtitle {
      font-size: 1rem;
    }
    .hero-cta-group { 
      justify-content: center;
    }
    .hero-right { 
      height: 300px; 
      margin-top: 1rem; 
    }
    .feature-card-modern { 
      border: 1px solid #e5e7eb; 
      border-radius: 12px; 
      padding: 1.8rem;
    }
    .feature-card-modern h3 {
      font-size: 1.1rem;
    }
    .brand-item-content {
      padding: 1.2rem 1.5rem;
      height: 100px;
      min-width: 140px;
    }
    .brand-item-content img {
      max-height: 60px;
    }
    .fallback-badge {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
    .view-all-link {
      font-size: 0.9rem;
    }
    .brands-subtitle {
      font-size: 1rem;
    }
    .about-grid-modern { 
      gap: 2rem; 
      grid-template-columns: 1fr;
      text-align: center;
    }
    .about-overlay {
      position: relative;
      bottom: auto;
      right: auto;
      margin-top: 2rem;
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
    }
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 1.8rem;
      line-height: 1.2;
    }
    .hero-subtitle {
      font-size: 0.95rem;
    }
    .hero-section {
      padding: 3rem 0;
    }
    .hero-right {
      height: 250px;
    }
    .feature-card-modern {
      padding: 1.5rem;
    }
    .feature-card-modern h3 {
      font-size: 1rem;
      margin-top: 1rem;
    }
    .brand-scroll-row {
      gap: 1rem;
    }
    .brand-item-content {
      padding: 1rem 1.2rem;
      height: 90px;
      min-width: 120px;
    }
    .section-header {
      margin-bottom: 1.5rem;
    }
  }
</style>

<script>
  const slides = document.querySelectorAll('.slide-img');
  let currentSlide = 0;
  
  if(slides.length > 0) {
    setInterval(() => {
        slides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.add('active');
    }, 4000);
  }
</script>
