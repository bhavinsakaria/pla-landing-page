---
import Layout from '../layouts/Layout.astro';

const features = [
  { icon: 'üíä', title: 'Wide Range', desc: 'Over 10,000 products available' },
  { icon: 'üöö', title: 'Fast Delivery', desc: 'Same-day delivery in metro areas' },
  { icon: 'üí∞', title: 'Best Prices', desc: 'Competitive pricing for maximum savings' },
  { icon: 'ü§ù', title: 'Trusted', desc: 'Serving 1000+ Customers since 1990' },
];

const brands = [
  'Alembic', 'B-tex', 'Bentley', 'Biochem', 'Biocrross', 'Cadila', 'Cipla', 'Delux', 'Enkay', 
  'Glenmark', 'HMD', 'Hicks', 'Intas', 'JMS', 'Kremoint', 'Medifill', 'Microlabs', 'National', 
  'Omega', 'Saibol', 'Torrent', 'Wockhardt'
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="grid-background"></div>
    <div class="container hero-container">
       <div class="hero-left">
          <h1 class="hero-title">Healthcare<br><span class="text-gradient">Delivered.</span></h1>
          <h2 class="hero-subtitle">The fastest pharmaceutical distribution network.<br>Seamless supply chain for the modern world.</h2>
          <p class="hero-desc">POWERED BY PHARMA LINKS AGENCIES INFRASTRUCTURE.</p>
          
          <div class="hero-cta-group">
             <a href="https://pharmalinks.co.in/" target="_blank" class="btn btn-primary-red btn-lg">BUY NOW</a>
             <a href="/contact" class="btn btn-outline btn-lg">CONTACT US</a>
          </div>
       </div>

       <div class="hero-right">
          <!-- Vanilla JS Slider for Max Stability -->
          <div class="js-slider" id="heroSlider">
             <img src="/hero_banner_1.png" class="slide-img active" alt="Slide 1">
             <img src="/hero_banner_2.png" class="slide-img" alt="Slide 2">
             <img src="/hero_banner_3.png" class="slide-img" alt="Slide 3">
             <img src="/hero_banner_4.png" class="slide-img" alt="Slide 4">
          </div>
          
          <!-- Floating UI Elements -->
          <div class="floating-badge badge-1">1000+ Customers</div>
          <div class="floating-badge badge-2">24/7 Support</div>
       </div>
    </div>
  </section>

  <!-- Quote/Ticker Section -->
  <section class="ticker-section">
     <div class="container text-center">
        <p class="scrolling-text">TRUSTED BY TOP PHARMACEUTICAL MANUFACTURERS AND HOSPITALS ACROSS INDIA</p>
     </div>
  </section>

  <!-- Features with Modern Cards -->
  <section class="section">
    <div class="container">
       <div class="section-header text-center">
          <h2>Why Choose Us</h2>
          <div class="header-line"></div>
       </div>
       <div class="features-grid">
          {features.map(f => (
            <div class="feature-card-modern">
               <div class="icon-wrapper">{f.icon}</div>
               <h3>{f.title}</h3>
               <p>{f.desc}</p>
            </div>
          ))}
       </div>
    </div>
  </section>

  <section class="section bg-dots">
    <div class="container">
        <div class="section-header text-center">
            <h2>Brands</h2>
            <div class="header-line"></div>
        </div>
        
        <div class="brand-slider-container">
             <div class="brand-track">
               <!-- Double the list for infinite scroll loop -->
               {[...brands, ...brands].map((brand) => (
                <div class="brand-slide">
                   <div class="logo-box-img">
                     <img src={`/brands/${brand}.png`} alt={brand} loading="lazy" onError="this.style.display='none';this.nextElementSibling.style.display='flex'">
                     <div class="fallback-text" style="display:none">{brand[0]}</div> 
                   </div>
                </div>
               ))}
             </div>
        </div>
        <div class="text-center mt-5">
             <a href="/brands" class="btn-link">VIEW ALL BRANDS</a>
        </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="section">
    <div class="container about-grid-modern">
       <div class="about-img_modern">
          <img src="/building.jpg" alt="Office Building">
          <div class="about-overlay">
             <h3>Since 1990</h3>
          </div>
       </div>
       <div class="about-content_modern">
          <h2>About Us</h2>
          <p class="lead">Building the future of healthcare logistics.</p>
          <p>Pharma Links Agencies isn't just a distributor; we are a vital node in the healthcare ecosystem. Serving over 1000+ Customers with precision and care.</p>
          <a href="/about" class="btn btn-black mt-4">READ OUR STORY</a>
       </div>
    </div>
  </section>
</Layout>

<style>
  /* Modern Grid & Hero */
  .hero-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
    background-color: #fff;
    min-height: 80vh; /* Ensure height */
    display: flex;
    align-items: center;
  }
  
  .grid-background {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-image: 
        linear-gradient(#f0f0f0 1px, transparent 1px),
        linear-gradient(90deg, #f0f0f0 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
    opacity: 0.6;
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }
  
  .hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -2px;
    font-family: 'Inter', sans-serif;
    color: #222;
  }
  
  .text-gradient {
    color: #e63946; /* Matching Red from button */
    background: linear-gradient(135deg, #e63946 0%, #a8202d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 1rem;
    color: #555;
    line-height: 1.4;
  }
  
  .hero-desc {
    color: #999;
    margin-bottom: 2.5rem;
    font-family: monospace;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 600;
  }
  
  .hero-cta-group {
    display: flex;
    gap: 1.5rem;
  }
  
  /* Red Button Style */
  .btn-primary-red {
    background-color: #e63946;
    color: white;
    border: none;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 4px;
    box-shadow: 0 4px 14px rgba(230, 57, 70, 0.4);
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }
  
  .btn-primary-red:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(230, 57, 70, 0.6);
    background-color: #d62839;
  }
  
  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 4px;
  }
  
  .btn-outline {
    background: transparent;
    border: 1px solid #ddd;
    color: #333;
    padding: 1rem 2rem;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
  }
  
  .btn-outline:hover {
    border-color: #333;
    background: #f9f9f9;
  }

  /* CSS ONLY Slider - High Performance */
  .hero-right {
    position: relative;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Clean boundaries */
  }

  .js-slider {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .slide-img {
    position: absolute;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 1s ease, transform 1s ease;
  }

  .slide-img.active {
    opacity: 1;
    transform: scale(1);
    z-index: 2;
  }
  
  .floating-badge {
    position: absolute;
    background: white;
    padding: 0.5rem 1rem;
    border: 1px solid #eee;
    box-shadow: 0 10px 20px rgba(0,0,0,0.05); /* Lighter shadow */
    font-family: monospace;
    font-size: 0.8rem;
    color: var(--color-primary);
    animation: float 6s ease-in-out infinite;
    z-index: 10;
  }
  
  .badge-1 { top: 10%; right: 10%; animation-delay: 0s; }
  .badge-2 { bottom: 20%; left: 0%; animation-delay: 3s; }
  
  @keyframes float {
    0%, 100% { transform: translate3d(0, 0, 0); }
    50% { transform: translate3d(0, -15px, 0); }
  }

  /* Ticker */
  .ticker-section {
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    padding: 1rem 0;
    background: #fafafa;
  }
  
  .scrolling-text {
    font-family: monospace;
    letter-spacing: 2px;
    color: #666;
    font-size: 0.8rem;
    margin: 0;
  }

  /* Modern Features */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }
  
  .feature-card-modern {
    padding: 2rem;
    border-left: 1px solid #eee; 
    transition: background 0.3s;
  }
  
  .feature-card-modern:hover {
    background: linear-gradient(135deg, rgba(var(--rgb-primary), 0.05), transparent);
  }
  
  .feature-card-modern h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 1rem 0;
  }
  
  .icon-wrapper {
    width: 50px; height: 50px;
    background: #f8f9fa;
    display: flex; align-items: center; justify-content: center;
    font-size: 1.5rem;
    border-radius: 8px;
  }

  /* Brand Slider (Marquee) */
  .bg-dots {
    background-image: radial-gradient(#ddd 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  .header-line {
    width: 60px; height: 4px; background: var(--color-primary); margin: 1rem auto;
  }

  .brand-slider-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    padding: 2rem 0;
  }
  
  .brand-track {
    display: inline-flex;
    animation: scroll 40s linear infinite;
    gap: 3rem;
  }
  
  .brand-slider-container:hover .brand-track {
    animation-play-state: paused;
  }
  
  .brand-slide {
    flex-shrink: 0;
    width: 150px;
    background: white;
    border: 1px solid #eee;
    padding: 1rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
  }
  
  .brand-slide:hover {
     transform: scale(1.05);
     border-color: #ddd;
  }
  
  .logo-box-img img {
    max-width: 100%;
    max-height: 80px;
    object-fit: contain;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  .btn-link {
    font-weight: 700;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #111;
  }

  /* Modern About */
  .about-grid-modern {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
  }
  
  .about-img_modern {
    position: relative;
  }
  
  .about-img_modern img {
    width: 100%;
    border-radius: 0; /* Sharp corners */
    filter: grayscale(20%);
    transition: filter 0.3s;
  }
  
  .about-img_modern:hover img { filter: grayscale(0%); }
  
  .about-overlay {
    position: absolute;
    bottom: -30px;
    right: -30px;
    background: white;
    color: #333;
    padding: 1.5rem 2.5rem;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    border-radius: 4px;
    border-left: 4px solid var(--color-primary);
  }
  
  .about-overlay h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -1px;
  }
  
  .btn-black {
    background: #111;
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 0;
    text-decoration: none;
    display: inline-block;
  }
  
  .btn-black:hover { background: #333; }

  /* Utilities */
  .fade-in-up { animation: fadeInUp 1s ease-out backwards; }
  .fade-in-right { animation: fadeInRight 1s ease-out backwards; }
  
  @keyframes fadeInUp { from { opacity: 0; transform: translate3d(0, 20px, 0); } to { opacity: 1; transform: translate3d(0, 0, 0); } }
  @keyframes fadeInRight { from { opacity: 0; transform: translate3d(20px, 0, 0); } to { opacity: 1; transform: translate3d(0, 0, 0); } }



  @media (max-width: 900px) {
    .hero-section { padding: 4rem 0; }
    .hero-container, .about-grid-modern { grid-template-columns: 1fr; text-align: center; }
    .hero-title { font-size: 3rem; }
    .hero-right { height: 300px; margin-top: 2rem; }
    .feature-card-modern { border: 1px solid #eee; border-radius: 8px; }
    .about-grid-modern { gap: 2rem; }
  }
</style>

<script>
  const slides = document.querySelectorAll('.slide-img');
  let currentSlide = 0;
  
  if(slides.length > 0) {
    setInterval(() => {
        slides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.add('active');
    }, 4000);
  }
</script>
